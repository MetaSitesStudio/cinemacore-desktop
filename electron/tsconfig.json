{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "../dist-electron",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["../electron/**/*", "../src/utils/**/*", "../src/types/**/*"]
}
